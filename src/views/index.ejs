<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Super aplicaci√≥n NODE 2.0</title>
    <!-- BOOSTRAP-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <h1>Hola Mundo <%=5+5+5 %></h1>

    <!-- <%= datos %>  -->

 <div class='row'>
        <div class='col-md-6 mt-4 text-center'>
            <table class='table table-striped'>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Fecha Nac</th>
                </tr>
                <% for(var i = 0; i < datos.length(); i++){ %>
                   <tr>
                       <td><%= datos[i].id_jugador %> <% i %></td>
                       <td><%= datos[i].nombre %></td>
                       <td><%= datos[i].apellido %></td>
                       <td><%= datos[i].fecha_nacimiento %></td>
                   </tr> 
                <% } %>
            </table>
        </div>

        <div class='col-md-4 mt-4 card'>
            <form action="/ingresar" method="post" class="card-body">
              <h3 class='card-title'>Agregar Jugador</h3>  
              <div class="form-group">
                  <input type="text" name="id_jugador" class="form-control" placeholder="Id Jugador"> 
              </div>
              <div class="form-group">
                <input type="text" name="nombre" class="form-control" placeholder="Nombre Jugador"> 
            </div>
            <div class="form-group">
                <input type="text" name="apellido" class="form-control" placeholder="Apellido Jugador"> 
            </div>
            <input type="submit" class="btn btn-primary">
            </form>    
        </div>
    </div> 

</body>
</html>